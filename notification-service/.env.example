# Environment Configuration
NODE_ENV=development
PORT=3009

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=notification_db
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Firebase Cloud Messaging (FCM) Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-firebase-client-id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@p2pdelivery.com
SENDGRID_FROM_NAME=P2P Delivery
SENDGRID_REPLY_TO=support@p2pdelivery.com
SENDGRID_WEBHOOK_URL=https://your-domain.com/webhooks/sendgrid
SENDGRID_DEFAULT_TEMPLATE_ID=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_WELCOME_TEMPLATE_ID=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_DELIVERY_UPDATE_TEMPLATE_ID=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_RECEIPT_TEMPLATE_ID=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com/webhooks/twilio
TWILIO_STATUS_CALLBACK_URL=https://your-domain.com/webhooks/twilio/status

# Apple Push Notification Service (APNS) Configuration
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_BUNDLE_ID=com.p2pdelivery.app
APNS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_APNS_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
APNS_DEFAULT_TOPIC=com.p2pdelivery.app

# SMTP Configuration (Fallback for SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@p2pdelivery.com
SMTP_FROM_NAME=P2P Delivery

# AWS SNS Configuration (Fallback for Twilio)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_SNS_SENDER_ID=P2PDelivery

# Socket.IO Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Logging Configuration
LOG_LEVEL=info

# Analytics Configuration
ANALYTICS_ENABLED=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key-here

# External Service URLs
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
PAYMENT_SERVICE_URL=http://localhost:3007

# Template Configuration
TEMPLATE_CACHE_TTL=1800
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh

# Security Configuration
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
TRUST_PROXY=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090