# Server Configuration
NODE_ENV=development
PORT=3003
HOST=0.0.0.0
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trip_db
DB_USER=postgres
DB_PASSWORD=password
DB_DIALECT=postgres
DB_LOGGING=false
DB_POOL_MAX=20
DB_POOL_MIN=0
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=10000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CLUSTER_MODE=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# External API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
OPENWEATHER_API_KEY=your-openweather-api-key

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_URL=http://localhost:3004
PAYMENT_SERVICE_URL=http://localhost:3005

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Logging
LOG_LEVEL=info
LOG_FILE=logs/trip-service.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# File Upload
UPLOAD_MAX_SIZE=10mb
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Cache Configuration
CACHE_TTL=300
SEARCH_CACHE_TTL=60
WEATHER_CACHE_TTL=1800

# Background Jobs
JOB_CONCURRENCY=5
JOB_MAX_ATTEMPTS=3
JOB_BACKOFF_DELAY=5000

# Weather Updates
WEATHER_UPDATE_INTERVAL=21600000
WEATHER_ALERT_THRESHOLD_TEMP_HIGH=40
WEATHER_ALERT_THRESHOLD_TEMP_LOW=-10
WEATHER_ALERT_THRESHOLD_WIND_SPEED=15

# Trip Configuration
MAX_TRIP_CAPACITY_WEIGHT=50
MAX_TRIP_CAPACITY_VOLUME=100
MAX_TRIP_CAPACITY_ITEMS=20
DEFAULT_SEARCH_RADIUS=50
MAX_SEARCH_RADIUS=500

# Recurring Trips
RECURRING_TRIP_LOOKAHEAD_DAYS=30
RECURRING_TRIP_CHECK_INTERVAL=3600000

# Analytics
ANALYTICS_RETENTION_DAYS=365
METRICS_COLLECTION_INTERVAL=300000

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
HELMET_CSP_ENABLED=true

# Monitoring
HEALTH_CHECK_TIMEOUT=5000
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true