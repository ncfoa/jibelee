# Server Configuration
NODE_ENV=development
PORT=3010
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://admin_user:admin_password@localhost:5432/admin_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=admin_db
DATABASE_USER=admin_user
DATABASE_PASSWORD=admin_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ADMIN_SECRET=your-super-secret-admin-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Admin Token Configuration
ADMIN_TOKEN_SECRET=your-super-secret-admin-token-change-in-production
ADMIN_SESSION_TIMEOUT=3600

# External Service URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
TRIP_SERVICE_URL=http://localhost:3003
DELIVERY_SERVICE_URL=http://localhost:3004
PAYMENT_SERVICE_URL=http://localhost:3007
LOCATION_SERVICE_URL=http://localhost:3008
NOTIFICATION_SERVICE_URL=http://localhost:3009

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./uploads
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Email Configuration (for admin notifications)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=admin@p2pdelivery.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=admin@p2pdelivery.com

# Backup Configuration
BACKUP_STORAGE_PATH=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Monitoring
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Feature Flags
ENABLE_REAL_TIME_DASHBOARD=true
ENABLE_AUTO_BACKUP=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_DISPUTE_AUTO_ASSIGNMENT=true