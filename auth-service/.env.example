# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://auth_user:auth_password@localhost:5432/auth_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auth_db
DB_USER=auth_user
DB_PASSWORD=auth_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
ACCESS_TOKEN_EXPIRY=30m
REFRESH_TOKEN_EXPIRY=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=5
PASSWORD_RESET_RATE_LIMIT_MAX=3
VERIFICATION_CODE_RATE_LIMIT_MAX=5

# Social Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./keys/apple-private-key.p8

# Email Service Configuration
EMAIL_SERVICE_URL=http://notification-service:3009
EMAIL_FROM_ADDRESS=noreply@p2pdelivery.com
EMAIL_FROM_NAME=P2P Delivery Platform

# External Service URLs
USER_MANAGEMENT_SERVICE_URL=http://user-management-service:3002
NOTIFICATION_SERVICE_URL=http://notification-service:3009

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/auth-service.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://app.p2pdelivery.com
CORS_CREDENTIALS=true

# Health Check Configuration
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics

# Application Configuration
APP_NAME=P2P Delivery Auth Service
APP_VERSION=1.0.0
API_VERSION=v1