# Environment Configuration
NODE_ENV=development
PORT=3006

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qr_db
DB_USER=qr_user
DB_PASSWORD=qr_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security Configuration
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# QR Code Encryption Keys (Generate new ones for production)
QR_ENCRYPTION_KEY_STANDARD=your-256-bit-standard-encryption-key-here
QR_ENCRYPTION_KEY_HIGH=your-256-bit-high-encryption-key-here
QR_ENCRYPTION_KEY_MAXIMUM=your-256-bit-maximum-encryption-key-here

# Key Rotation Settings
KEY_ROTATION_INTERVAL=86400000
SALT_ROUNDS=12

# QR Code Settings
QR_CODE_EXPIRY_HOURS=24
QR_CODE_MAX_SIZE=800
QR_CODE_DEFAULT_SIZE=400
QR_CODE_ERROR_CORRECTION=H

# Location Settings
DEFAULT_LOCATION_RADIUS=100
MAX_LOCATION_RADIUS=1000

# Emergency Override Settings
EMERGENCY_OVERRIDE_EXPIRY_HOURS=2
EMERGENCY_CODE_LENGTH=12

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# External Service URLs
DELIVERY_SERVICE_URL=http://localhost:3004
USER_SERVICE_URL=http://localhost:3002
NOTIFICATION_SERVICE_URL=http://localhost:3009

# Blockchain Settings (Optional)
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_NETWORK=ethereum
BLOCKCHAIN_RPC_URL=
BLOCKCHAIN_PRIVATE_KEY=

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Health Check Settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000