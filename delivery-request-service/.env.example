# Server Configuration
PORT=3004
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=delivery_db
DB_USER=delivery_user
DB_PASSWORD=delivery_password
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# External Service URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
TRIP_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3007
NOTIFICATION_SERVICE_URL=http://localhost:3009
LOCATION_SERVICE_URL=http://localhost:3008

# Machine Learning
ML_MODEL_PATH=./ml-models/matching/model.json
ML_TRAINING_DATA_PATH=./data/training
ML_BATCH_SIZE=32
ML_EPOCHS=100

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Geospatial
DEFAULT_SEARCH_RADIUS=50
MAX_SEARCH_RADIUS=200
DEFAULT_DETOUR_LIMIT=20

# Background Jobs
QUEUE_REDIS_URL=redis://localhost:6379
MATCHING_JOB_DELAY=5000
EXPIRATION_CHECK_INTERVAL=300000

# Monitoring
LOG_LEVEL=info
LOG_FILE_PATH=./logs