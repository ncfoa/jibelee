# Server Configuration
NODE_ENV=development
PORT=3008

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=location_db
DB_SSL=false

# Test Database (for testing)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=postgres
TEST_DB_PASSWORD=postgres
TEST_DB_NAME=location_test_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# Service Authentication
SERVICE_KEY=your-service-key-here
API_KEY=your-api-key-here

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Notification Services
SENDGRID_API_KEY=your-sendgrid-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
FCM_SERVER_KEY=your-fcm-server-key

# Privacy Configuration
DEFAULT_DATA_RETENTION_DAYS=90
DEFAULT_ANONYMIZATION_DELAY_HOURS=24

# Performance Configuration
MAX_LOCATION_BATCH_SIZE=100
GEOFENCE_CHECK_TIMEOUT=5000
ROUTE_OPTIMIZATION_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_TIMEOUT=60000

# Emergency Services
EMERGENCY_NOTIFICATION_WEBHOOK=https://emergency.example.com/webhook
EMERGENCY_ESCALATION_DELAY_MINUTES=30

# Development Settings
ENABLE_MOCK_SERVICES=true
MOCK_LOCATION_ACCURACY=10
MOCK_RESPONSE_DELAY=100