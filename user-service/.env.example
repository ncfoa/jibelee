# Server Configuration
NODE_ENV=development
PORT=3002
HOST=0.0.0.0
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=user_db
DB_USER=postgres
DB_PASSWORD=password
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000
DB_POOL_EVICT=1000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-public-bucket
S3_SECURE_BUCKET_NAME=your-secure-bucket
CDN_DOMAIN=your-cdn-domain.com

# Geocoding Configuration
MAPBOX_ACCESS_TOKEN=your-mapbox-token
GOOGLE_MAPS_API_KEY=your-google-maps-key
GEOCODING_PROVIDER=mapbox

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
HEALTH_CHECK_TOKEN=your-health-check-token
BLOCK_SUSPICIOUS_REQUESTS=false

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=1000
STRICT_RATE_LIMIT_WINDOW_MS=900000
STRICT_RATE_LIMIT_MAX=10
FILE_UPLOAD_RATE_LIMIT_WINDOW_MS=3600000
FILE_UPLOAD_RATE_LIMIT_MAX=20

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_PROFILE_PICTURE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# External Services
AUTH_SERVICE_URL=http://localhost:3001
NOTIFICATION_SERVICE_URL=http://localhost:3009
PAYMENT_SERVICE_URL=http://localhost:3007